# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_API_URL=http://localhost:3000

# Supabase Edge Functions (pour les environnements locaux)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Resend API (pour l'envoi d'emails)
# Créer un compte gratuit sur https://resend.com
RESEND_API_KEY=re_your_resend_api_key

# Images & Médias
# Option 1: Supabase Storage (défaut)
NEXT_PUBLIC_SUPABASE_IMAGE=https://xxxxx.supabase.co/storage/v1/object/public/linguami/

# Option 2: Cloudflare R2 (recommandé pour la production)
# NEXT_PUBLIC_SUPABASE_IMAGE=https://pub-xxxxx.r2.dev/
# OU avec domaine personnalisé:
# NEXT_PUBLIC_SUPABASE_IMAGE=https://cdn.linguami.com/

# Cloudflare R2 Configuration (pour la migration et le stockage)
# Obtenez ces valeurs dans Cloudflare Dashboard > R2 > Manage API Tokens
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=linguami

# Yandex Dictionary API (pour les traductions)
# Obtenir une clé gratuite sur https://yandex.com/dev/dictionary/
YANDEX_DICT_API_KEY=your_yandex_dict_api_key
